<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.fhtrier.voiceDiary"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk
        android:minSdkVersion="8"
        android:targetSdkVersion="19" />

    <uses-permission android:name="android.permission.RECORD_AUDIO" />
    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.RECEIVE_BOOT_COMPLETED" />
    <uses-permission android:name="android.permission.ACCESS_WIFI_STATE" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WAKE_LOCK" />
    <uses-permission android:name="android.permission.CHANGE_WIFI_STATE" />
    <uses-permission android:name="android.permission.READ_PHONE_STATE"/>
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />
    <uses-permission android:name="android.permission.READ_EXTERNAL_STORAGE" />
    <application
        android:name="com.fhtrier.voiceDiary.MyApplication"
        android:allowBackup="true"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/Holo.Theme" 
        android:keepScreenOn = "true">
        <activity
            android:name="com.fhtrier.voiceDiary.VoiceDiaryActivity"
            android:configChanges="locale" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name="com.fhtrier.voiceDiary.PatientActivity" >
        </activity>
        <activity android:name="com.fhtrier.voiceDiary.RecordActivity" >
        </activity>
        <activity android:name="com.fhtrier.voiceDiary.SetFrequencyActivity" >
        </activity>
        <activity android:name="com.fhtrier.voiceDiary.QuestionActivity" >
        </activity>
        <activity android:name="com.fhtrier.voiceDiary.LoginActivity" >
        </activity>
        <activity android:name="com.fhtrier.voiceDiary.RegisterActivity" >
        </activity>
        <service
            android:name="com.fhtrier.voiceDiary.EduroamLogoutService"
            android:label=".LogOut"
            android:process=":remote" >
        </service>
        <activity
            android:name="com.fhtrier.voiceDiary.AdministrationActivity"
            android:label="@string/title_activity_administration" >
        </activity>
        <activity
            android:name="com.fhtrier.voiceDiary.MainActivity"
            android:label="@string/title_activity_main" >
        </activity>
    </application>

</manifest>